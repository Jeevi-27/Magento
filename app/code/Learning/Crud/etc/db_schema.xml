<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="crud_post" resource="default" engine="innodb" comment="Crud Post Table">
       
        <column xsi:type="int" name="post_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Post ID"/>
        <column xsi:type="varchar" name="url_key" nullable="false" length="255" comment="Url Key"/>
         <column xsi:type="varchar" name="post_content" nullable="false" length="255" comment="Post Content"/>
          <column xsi:type="varchar" name="tags" nullable="false" length="255" comment="Tags"/>
        <column xsi:type="int" name="status" unsigned="false" nullable="true" comment="Status"/>
        <column xsi:type="varchar" name="featured_image" nullable="true" length="255" comment="Featured Image"/>
         <column xsi:type="timestamp" name="created_at" nullable="true" comment="Created At"/>
          <column xsi:type="timestamp" name="updated_at" nullable="true" comment="Updated At"/>
     
       
    </table>
</schema>
